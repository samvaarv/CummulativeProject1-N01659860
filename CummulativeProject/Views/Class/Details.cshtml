@model CummulativeProject.Models.Class

@{
    ViewBag.Title = "Remove Teacher from Class";
}

<h2>Remove Teacher from Class</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<h3>@Model.ClassName - @Model.ClassCode</h3>

<ul>
    @foreach (var teacher in Model.Teachers)
    {
        <li>
            @teacher.TeacherFname @teacher.TeacherLname
            <form method="post" action="/Class/RemoveTeacherFromClass">
                <input type="hidden" name="ClassId" value="@Model.ClassId" />
                <input type="hidden" name="TeacherId" value="@teacher.TeacherId" />
                <button type="submit">Remove</button>
            </form>
        </li>
    }
</ul>
